{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "container/*": ["src/container/*"],
      "component/*": ["src/component/*"],
      "style/*": ["src/style/*"],
      "reducer/*": ["src/reducer/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
